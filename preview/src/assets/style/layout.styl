body
  font-family Arial, Helvetica, sans-serif
  width 100%
  max-width 100%
  overflow-x: hidden


.row, .col
  display flex

.row
  flex 1 0 100%
  flex-flow row wrap

.col
  flex 1 1 auto
  flex-flow column wrap
  max-width 100%

.box
  box-shadow 3px 3px 10px rgba(0, 0, 0, 0.5)
  min-height 100%
  margin 1em
  width calc(100%-4em)
  max-width calc(100%-4em)